 {
     "name": "JIRA Helper",
     "version": "1.0",
     "description": "Create JIRA ticket faster",
     "omnibox": {"keyword" : "jira"},
     "browser_action" : {
         "default_popup": "create-jira.html"
     },
     "options_page": "options.html",
     "background" : {
         "persistent":false,
         "scripts": ["background.js"]
     },
     "permissions": [
         "tabs", "storage"
     ],
     "icons": {
         "16": "images/jira_16.png",
         "32": "images/jira_32.png",
         "48": "images/jira_48.png",
         "128": "images/jira_128.png"
     },
     "manifest_version": 2
}
